/* pages/catTrain/catTrain.wxss */
@import "../home/home.wxss";
.container{
  padding: 0 30rpx;
}
.c-title{
  width: 300rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  text-align: center;
  color: rgb(212, 126, 126);
  font-size: 40rpx;
  font-weight: bold;
  line-height: 100rpx;
  background: khaki;
}
.c-steps{
  width: 100%;
  height: 100%;
  padding: 0 15rpx;
  margin-bottom: 10rpx;
 
}
.c-steps-title{
  height: 40rpx;
  width: 350rpx;
  font-weight: bold;
  /* color: rgb(65, 63, 63); */
  line-height: 40rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.c-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
}
.c-wrap .m-img{
  width: 50%;
  position: relative;
}
.c-steps .first-img{
  margin-right: 20rpx;
}
.c-wrap image{
  width: 340rpx;
  height: 320rpx;
  border-radius: 20rpx;
}
.c-info{
  position: absolute;
  top:10rpx;
  display: flex;
  flex-direction: column;
  width: 320rpx;
  height: 100rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  font-weight: bold;
  color: rgba(87, 76, 76, 0.911);

}
.c-level{
  height: 60rpx;
}
.c-level text{
  margin-right: 10rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}
.c-info .van-cell{
  padding: 0rpx 0rpx;
  background: none;
  text-decoration: underline;
}
.c-info .van-cell:after{
border-bottom: none;
}
.van-popup{
  width: 100%;

}
.c-popup{
  width: 100%;
  background: #ccc;
  padding: 20rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.c-popup-title{
  font-size: 45rpx;
  font-weight: bold;
  color: rgb(17, 17, 17);
}
.c-train-info{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  word-wrap: break-word;
 
}
.c-info-title{
  font-weight: bold;
  margin-bottom: 20rpx;
}
.c-info-content{
  text-align: left;
  font-size: 30rpx;
  text-indent: 60rpx;

}