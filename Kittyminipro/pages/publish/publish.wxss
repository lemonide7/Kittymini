.wrap{
  margin-top: 20rpx;
  background: #ffff;
  width: 100%;
  height: 600rpx;
  box-sizing: border-box;
  position: relative;
  padding: 20rpx 20rpx;
}
.camera{
  position: absolute;
  left: 30rpx;
  bottom:50rpx;
  width: 200rpx;
  height: 200rpx;
  text-align: center; 
  /* border: 1px solid #ccc; */
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 15rpx #888888;
}
.camera image{
  width: 120rpx;
  height: 100rpx;
  padding-top:40rpx; 

}
