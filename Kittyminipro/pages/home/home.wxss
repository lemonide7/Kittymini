/* pages/home/home.wxss */
/* @import "../kittyicon/catIcon.wxss"; */
@import "../icons/iconfont.wxss";
html,body,view,p,h1,h2,h3,img,input,ul,li{
  margin: 0;
  padding: 0;
  font-family: "微软雅黑";
  color: rgba(78, 66, 66, 0.8);
}

.container{
  margin: 0 auto;
  padding: 0 20rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.swiper{
  padding-top: 15rpx;
  height: 290rpx;
  width: 100%;

  
}
.swiper image {
  height: 280rpx;
  width: 100%;
  border-radius: 15rpx;
  
}
.pets{
  width: 100%; 
  height: 130rpx;
  border: 1px solid aliceblue; 
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.pets .pets-item{
  display: flex;
  flex-direction: column;
  width: 174rpx;
  height: 90rpx;
  text-align: center;

}
.pets .pets-info{
  font-family: "微软雅黑";
  color: rgba(78, 66, 66, 0.8);
} 
.pets text{
  font-size: 12px;
}
.banner{
  margin-top:20rpx; 
  width: 100%;
  border-radius: 100rpx;
  height: 200rpx;
}
.banner image{
  border-radius:10rpx; 
  width: 100%;
  height: 100%;
}

.tabbar image{
  width: 120rpx;
}
.s-s{
  margin-top:20rpx;
  width: 100%;
}
.s-s .s-s-top{
  width: 100%;
  height: 40rpx;
  padding-top:5rpx; 
}
.s-s-top .line{
  float:left;
  height: 30rpx;
  border-left: 3px solid #FFD700;
  line-height: 30rpx;
}
.s-s-top .text{
  width: 100%;
  height: 30rpx;
  position: relative;
  margin-left: 15rpx;
  line-height: 30rpx;
  font-weight: bold;
}
.s-s-top .text .lookmore{
  position: absolute;
  display: block;
  font-size: 25rpx;
  right: 20rpx;
  bottom:-10rpx;
}
.showoff{
  margin-top: 10rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.showoff .img{
  width: 50%;
  height: 260rpx;
  margin-right: 20rpx;
}
.showoff image{
  height: 100%;
  width: 344rpx;
  border-radius: 15rpx;
}
